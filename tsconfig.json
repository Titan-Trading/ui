{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": false,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "resources/js",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "typeRoots" : [
      "node_modules/@types", 
      "resources/js/types"
    ],
    "paths": {
      "Components/*": ["resources/js/components/*"],
      "API/*": ["resources/js/api/*"],
      "Redux/*": ["resources/js/redux/*"],
      "Helpers": ["resources/js/helpers/index.tsx"],
      "Routes/*": ["resources/js/routes/*"],
      "Paths": ["resources/js/routes/index.tsx"],
      "Images/*": ["resources/images/*"]
    }
  },
  "include": ["./resources/**/*"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}